<%= form_with url: "/players/#{@player.id}/games", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name%><br>
  <%= form.label :won?, "Won" %>
  <%= form.radio_button :won?, true %>
  <%= form.radio_button :won?, false %>
  <%= form.label :won?, "Lost" %><br>
  <%= form.label :pieces %>
  <%= form.text_field :pieces %><br>
  <%= form.submit "Create Game" %>
<% end %>
