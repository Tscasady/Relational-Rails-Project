<h1><%= "#{@player.name}'s Games"%></h1>
<%= link_to "Sort Alphabetically", "/players/#{@player.id}/games?sort=alpha" %><br><br>
<% @games.each do |game| %>
  <%= link_to "Edit #{game.name}", "/games/#{game.id}/edit" %>
  <% game.attribute_names.each do |attribute| %>
    <p><%= "#{attribute}: " + "#{game[attribute]}"   %></p>
  <% end %>
<% end %>

<%= button_to "Create Game", "/players/#{@player.id}/games/new", method: :get, local: true %>
<%= form_with url: "/players/#{@player.id}/games", method: :get, local: true do |form| %>
  <%= form.label "Only show games with more than" %>
  <%= form.number_field :sort%>
  <%= form.submit "Submit"%>
<% end %>  
  
  
  
